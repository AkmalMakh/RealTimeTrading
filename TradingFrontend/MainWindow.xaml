<Window x:Class="TradingFrontend.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Trading Platform"
        Height="600" Width="600"
        Background="#FAFAFA"
        WindowStartupLocation="CenterScreen">

    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300" Margin="0">
        <TextBlock Text="Select a Ticker"
                   FontSize="20"
                   FontWeight="SemiBold"
                   Foreground="#222"
                   HorizontalAlignment="Center"
                   Margin="0 0 0 20" />

        <ComboBox x:Name="TickerComboBox"
                  Width="280"
                  Height="40"
                  FontSize="14"
                  FontFamily="Segoe UI"
                  Padding="8"
                  Background="White"
                  Foreground="#333"
                  BorderBrush="#DDD"
                  BorderThickness="1"
                  Margin="0 0 0 30" />

        <Button Content="Open Order Book"
                Click="OpenOrderBook_Click"
                Width="280"
                Height="48"
                Background="#E0E0E0"
                Foreground="#000"
                FontSize="15"
                FontFamily="Segoe UI"
                FontWeight="SemiBold"
                BorderBrush="#CCCCCC"
                BorderThickness="1"
                Margin="0 0 0 15">
            <Button.Effect>
                <DropShadowEffect BlurRadius="6" Opacity="0.1" />
            </Button.Effect>
        </Button>

        <Button Content="View Trade History"
                Click="ViewTradeHistory_Click"
                Width="280"
                Height="48"
                Background="#E0E0E0"
                Foreground="#000"
                FontSize="15"
                FontFamily="Segoe UI"
                FontWeight="SemiBold"
                BorderBrush="#CCCCCC"
                BorderThickness="1"
                Margin="0">
            <Button.Effect>
                <DropShadowEffect BlurRadius="6" Opacity="0.1" />
            </Button.Effect>
        </Button>
    </StackPanel>
</Window>
