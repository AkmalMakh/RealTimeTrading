<Window x:Class="TradingFrontend.OrderBookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Order Book" Height="700" Width="800"
        Background="#f5f5f5">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
          
            <RowDefinition Height="*" />
            
            <RowDefinition Height="Auto" />
        
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

     
        <TextBlock x:Name="TickerTitleText"
                   Grid.Row="0"
                   Grid.ColumnSpan="2"
                   HorizontalAlignment="Center"
                   FontSize="26"
                   FontWeight="SemiBold"
                   Foreground="#333"
                   Margin="0 0 0 20" />

        <StackPanel Grid.Row="1" Grid.Column="0" Margin="10">
            <TextBlock Text="Asks"
                       FontWeight="Bold"
                       FontSize="23"
                       Foreground="#E53935"
                       Margin="0 0 0 10"/>
            <TextBlock Text="Price       |   Quantity"
                       FontWeight="SemiBold"
                       Foreground="#888"
                       FontFamily="Consolas"
                       Margin="0 0 0 5" />
            <ListBox x:Name="AsksListBox"
                     Height="500"
                     FontSize="16"
                     FontFamily="Consolas"
                     Background="White"
                     BorderBrush="#ddd"
                     BorderThickness="1"
                     Foreground="#D32F2F"
                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                     Padding="8"
                     Margin="0" 
                     SelectionChanged="AsksListBox_SelectionChanged"/>
        </StackPanel>


        <StackPanel Grid.Row="1" Grid.Column="1" Margin="10">
            <TextBlock Text="Bids"
                       FontWeight="Bold"
                       FontSize="23"
                       Foreground="#1E88E5"
                       Margin="0 0 0 10"/>
            <TextBlock Text="Price     |   Quantity"
                       FontWeight="SemiBold"
                       Foreground="#888"
                       FontFamily="Consolas"
                       Margin="0 0 0 5" />
            <ListBox x:Name="BidsListBox"
                     Height="500"
                     FontSize="16"
                     FontFamily="Consolas"
                     Background="White"
                     BorderBrush="#ddd"
                     BorderThickness="1"
                     Foreground="#1976D2"
                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                     Padding="8"
                     Margin="0" 
                     SelectionChanged="BidsListBox_SelectionChanged"/>
        </StackPanel>


        <StackPanel Grid.Row="2"
                    Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,20,0,0">
        </StackPanel>
    </Grid>
</Window>
